---
layout: rss.njk
section: notes
permalink: /feed.xml
---
{% set postslist = collections.posts %}
{% for post in postslist | reverse %}
<entry>
  <title type="html">{{ post.data.title }}</title>
  <link href="{{ metadata.url }}{{ post.url | url }}" rel="alternate" type="text/html" title="{{ post.data.title }}" />
  <published>{{ post.date | feedDate }}</published>
  <updated>{{ post.date | feedDate }}</updated>
  <id>{{ metadata.url }}{{ post.url | url }}</id>
  <author>
   <name>{{ metadata.author.name }}</name>
   <uri>{{ metadata.url }}</uri>
  </author>
  <summary type="html">{{ post.data.summary if post.data.summary.length > 0 else "an old, unsummarized post" }}</summary>
  <content type="html" xml:base="{{ metadata.url }}{{ post.url | url }}">{{ post.content }}</content>
</entry>
{% endfor %}
